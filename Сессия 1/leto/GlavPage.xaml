<Window x:Class="leto.GlavPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:leto"
        mc:Ignorable="d"
        Title="AMONIC AIRLINES" Height="450" Width="800" WindowState="Maximized">
    <Grid Background="#064b66">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Name="add_btn" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="24" Margin="10 0" Click="add_btn_Click" Padding="0 5" FontWeight="DemiBold" FontFamily="TeX Gyre Adventor">
                <TextBlock Text="Add user" TextDecorations="Underline" Foreground="#FFF1F1F2"/>
            </Button>
            <Button Name="ext_btn" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="24" Margin="10 0" Click="ext_btn_Click" Padding="0 5" FontWeight="DemiBold" FontFamily="TeX Gyre Adventor">
                <TextBlock Text="Exit" TextDecorations="Underline" Foreground="#FFF1F1F2"/>
            </Button>
        </StackPanel>
        <Frame Name="MainFrame1" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Window>
